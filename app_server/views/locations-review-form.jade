extends layout

block content
    .row.page-header
        .col-xs-12.col-sm-12.col-md-12.col-lg-12
            h1= pageHeader.title
    .row
        .col-xs-12.col-sm-12.col-md-12.col-lg-12
            form.form-horizontal(action='/location', method='get', role='form')
                .form-group
                    label.col-xs-10.col-sm-2.col-md-2.col-lg-2.control-label(for='name') Name
                    .col-xs-12.col-sm-10.col-md-10.col-lg-10
                        input#name.form-control(name='name')
                .form-group
                    label.col-xs-10.col-sm-2.col-md-2.col-lg-2.control-label(for='rating') Rating
                    .col-xs-12.col-sm-2.col-md-2.col-lg-2
                        select#rating.form-control.input-sm(name='rating')
                            option 5
                            option 4
                            option 3
                            option 2
                            option 1
                .form-group
                    label.col-xs-12.col-sm-2.col-md-2.col-lg-2.control-label(for='review') Review
                    .col-xs-12.col-sm-10.col-md-10.col-lg-10
                        textarea#review.form-control(name='review', rows='5')
                button.btn.btn-default.pull-right Add my review